#include <stdio.h>

int main() {
    int i, j, n, bu[10], wa[10], tat[10], t, ct[10], max, total_burst;
    float awt = 0, att = 0, temp = 0;
    
    
    printf("Enter the number of processes -- ");
    scanf("%d", &n);
    
    
    for(i = 0; i < n; i++) {
        printf("\nEnter Burst Time for process %d -- ", i + 1);
        scanf("%d", &bu[i]);
        ct[i] = 0; 
    }
    
    
    printf("\nEnter the size of time slice -- ");
    scanf("%d", &t);
    
    total_burst = 0;
    for(i = 0; i < n; i++) {
        total_burst += bu[i]; 
    }
    
    int remaining_burst[n]; 
    for(i = 0; i < n; i++) {
        remaining_burst[i] = bu[i];
    }

    
    j = 0; 
    for(i = 0; total_burst > 0; ) {
        if(remaining_burst[j] > 0) {
            if(remaining_burst[j] <= t) {
                temp += remaining_burst[j];
                remaining_burst[j] = 0;
                ct[j] = temp;
                total_burst -= bu[j]; 
            } else {
                temp += t;
                remaining_burst[j] -= t;
            }
        }
        j = (j + 1) % n; 
    }

    
    for(i = 0; i < n; i++) {
        tat[i] = ct[i]; 
        wa[i] = tat[i] - bu[i]; 
        awt += wa[i];
        att += tat[i];
    }

   
    printf("\nThe Average Turnaround time is -- %f", att / n);
    printf("\nThe Average Waiting time is -- %f", awt / n);
    printf("\n\tPROCESS\tBURST TIME\tWAITING TIME\tTURNAROUND TIME\n");
    for(i = 0; i < n; i++)
        printf("\t%d\t%d\t\t%d\t\t%d\n", i + 1, bu[i], wa[i], tat[i]);

    return 0;
}

